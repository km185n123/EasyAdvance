<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulos.collection.StartCollectionFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_start_collection"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_start_collection"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_collection"
        app:layout_constraintStart_toStartOf="@+id/btn_start_collection"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_collection" />

</androidx.constraintlayout.widget.ConstraintLayout>